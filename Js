<script>
// ğŸ”¥ FIREBASE CONFIG (THAY Cá»¦A Báº N)
const firebaseConfig = {
  apiKey: "API_KEY",
  authDomain: "PROJECT.firebaseapp.com",
  projectId: "PROJECT_ID"
};
firebase.initializeApp(firebaseConfig);
const db = firebase.firestore();
const auth = firebase.auth();

// ğŸ” CHECK ADMIN
auth.onAuthStateChanged(async user=>{
  if(!user){
    alert("ChÆ°a Ä‘Äƒng nháº­p!");
    location.href="index.html";
    return;
  }

  const doc = await db.collection("users").doc(user.uid).get();
  if(doc.data().role !== "admin"){
    alert("âŒ KhÃ´ng cÃ³ quyá»n admin!");
    location.href="index.html";
  }
});

// ğŸ‘¤ LOAD USER
db.collection("users").onSnapshot(snap=>{
  userList.innerHTML="";
  snap.forEach(doc=>{
    const u = doc.data();
    userList.innerHTML += `
      <div class="user">
        <b>${u.username}</b><br>
        UID: ${doc.id}<br>
        ğŸ’° ${u.wallet.toLocaleString()}Ä‘
      </div>`;
  });
});

// ğŸ’° Cáº¤P / TRá»ª TIá»€N
function capTien(){
  const uid = uidInput.value.trim();
  const money = Number(moneyInput.value);

  if(!uid || !money) return alert("Nháº­p Ä‘á»§!");

  const ref = db.collection("users").doc(uid);
  db.runTransaction(async t=>{
    const d = await t.get(ref);
    t.update(ref,{ wallet: d.data().wallet + money });
  })
  .then(()=>alert("âœ… ThÃ nh cÃ´ng"))
  .catch(()=>alert("âŒ Lá»—i"));
}

// ğŸ“œ LOAD ÄÆ N
db.collection("orders")
.orderBy("time","desc")
.onSnapshot(snap=>{
  orderList.innerHTML="";
  snap.forEach(doc=>{
    const o = doc.data();
    orderList.innerHTML += `
      <div class="order">
        ğŸ‘¤ ${o.username}<br>
        ğŸ“¦ ${o.goi}<br>
        ğŸ’° ${o.price.toLocaleString()}Ä‘<br>
        ğŸ“Œ ${o.status || "Chá» xá»­ lÃ½"}
      </div>`;
  });
});
</script>

